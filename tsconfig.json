{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, // no errors on commonjs default import
    "baseUrl": "./src", // enables relative imports to root
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2016", "es2017.object"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": ["./src/**/*", "./typings/**/*"]
}
